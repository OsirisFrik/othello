{
  "include": ["env.d.ts", "src/*", "../**/*.d.ts"],
  "compilerOptions": {
    "target": "es2022",
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": "src",
    "paths": {
      "@/*": ["./"]
    },
    "types": [
      "node",
      "./src"
    ],
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  }
}
